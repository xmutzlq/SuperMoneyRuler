<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <attr name="textSize" format="dimension"/>
    <attr name="textColor" format="color" />
    <attr name="dividerColor" format="color"/>
    
    <!-- 波浪背景 -->
    <declare-styleable name="RadarWaveView">

        <attr name="waveColor" format="color" />

        <attr name="waveAmplitude" format="dimension" />

        <attr name="waveSpeed" format="float" />

        <attr name="waveStartPeriod" format="float" />
        <attr name="waveStart" format="boolean" />

        <attr name="waveFillTop" format="boolean" />
        <attr name="waveFillBottom" format="boolean" />

        <attr name="waveFillType" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>

        <attr name="waveType" format="enum">
            <enum name="sin" value="0" />
            <enum name="cos" value="1" />
        </attr>

    </declare-styleable>
    
    <!-- 金额刻度尺 -->
    <declare-styleable name="slideruler">
        <!--最小值-->
        <attr name="s_min_value" format="integer"/>
        <!--最大值-->
        <attr name="s_max_value" format="integer"/>
        <!--当前值-->
        <attr name="s_current_value" format="integer"/>
        <!--最小单位值-->
        <attr name="min_unitValue" format="integer"></attr>
        <!--最小当前值-->
        <attr name="min_currentValue" format="integer"></attr>
        <!--数值字体大小-->
        <attr name="textSize" />
        <!---数值字体颜色-->
        <attr name="textColor" />
        <!--底部和刻度的线颜色-->
        <attr name="dividerColor" />
        <!--指示器的颜色-->
        <attr name="indicatrixColor" format="integer"></attr>
        <!--一屏显示Item-->
        <attr name="show_itemSize" format="integer" ></attr>
        <!--刻度和数值的间距-->
        <attr name="margin_cursor_data" format="dimension"></attr>
        <!--长指针大小-->
        <attr name="longCursor" format="dimension"></attr>
        <!--短指针大小-->
        <attr name="shortCursor" format="dimension"></attr>
    </declare-styleable>
</resources>
